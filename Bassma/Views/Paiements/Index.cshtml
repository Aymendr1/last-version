@model IEnumerable<Bassma.Models.Paiement>

<div class="header">
    <h1>Gestion des Paiements</h1>
    <p class="text-muted">Liste des paiements et leurs détails associés.</p>
</div>

<div class="d-flex justify-content-between align-items-center mt-4">
    <h3>Liste des Paiements</h3>
    <a href="/Paiements/Create" class="btn btn-success">Ajouter un Paiement</a>
</div>

<table class="table mt-4">
    <thead style="background-color: rgb(66, 38, 42); color: white;">
        <tr>
            <th>ID Paiement</th>
            <th>ID Commande</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var paiement in Model)
            {
                <tr>
                    <!-- Paiement ID -->
                    <td>@paiement.Id</td>

                    <!-- Commande ID -->
                    <td>@paiement.CommandeId</td>

                    <!-- Status -->
                    <td>@paiement.Status</td>

                    <!-- Actions -->
                    <td>
                        <a href="/Paiements/Edit/@paiement.Id" class="btn btn-warning btn-sm">Modifier</a>
                        <a href="/Paiements/Details/@paiement.Id" class="btn btn-info btn-sm">Détails</a>
                        <a href="/Paiements/Delete/@paiement.Id" class="btn btn-danger btn-sm"
                           onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce paiement ?');">
                            Supprimer
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted" style="padding: 15px; font-style: italic;">
                    Aucun paiement disponible pour le moment.
                </td>
            </tr>
        }
    </tbody>
</table>