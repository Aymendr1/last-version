    </div>
</header>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        background-color: #f9f4ef;
    }

    .cart-section {
        background-color: white;
        padding: 50px 0;
    }

    h3 {
        color: rgb(66, 38, 42);
        font-weight: bold;
        margin-bottom: 30px;
    }

    .card {
        border: none;
        border-radius: 5px;
        background-color: white;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        height: 100%; /* Ensures cards have the same height */
    }

    .card-body {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        height: 100%;
    }

    .card img {
        max-height: 200px; /* Increased image height */
        object-fit: cover;
        border-radius: 5px;
        width: 100%; /* Ensures full-width images */
    }

    .card-title {
        color: rgb(66, 38, 42);
        font-weight: bold;
        font-size: 1.2rem;
        margin-top: 10px;
        text-align: center;
    }

    .card-text {
        color: rgb(66, 38, 42);
        margin: 10px 0;
        text-align: center;
    }

    .btn.add-to-cart {
        background-color: rgb(66, 38, 42);
        color: white;
        border-radius: 0px;
        padding: 10px 20px;
        transition: background-color 0.3s ease;
    }

        .btn.add-to-cart:hover {
            background-color: rgb(182, 187, 0);
        }

    .table {
        background-color: white;
        border-radius: 5px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

        .table thead {
            background-color: rgb(66, 38, 42);
            color: white;
        }

        .table th, .table td {
            padding: 15px;
        }

    .admin-dashboard-btn {
        display: inline-block;
        font-size: 1.2rem;
        font-weight: 600;
        color: white;
        background-color: rgb(66, 38, 42);
        padding: 10px 30px;
        border-radius: 0px;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .admin-dashboard-btn:hover {
            background-color: rgb(182, 187, 0);
            color: white;
        }

    .total-summary {
        color: rgb(66, 38, 42);
        font-weight: bold;
    }
</style>

<!-- Cart Section -->
<section class="cart-section">
    <div class="container">
        <!-- Products Section -->
        <div class="products-section mb-5">
            <h3>Produits Disponibles</h3>
            <div class="row">
                @foreach (var produit in Model)
                {
                    <div class="col-md-3 col-sm-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <!-- Product Image -->
                                <img src="@(!string.IsNullOrEmpty(produit.ImagePath) ? produit.ImagePath : "/images/default.jpg")"
                                     alt="@produit.Nom"
                                     class="img-fluid">

                                <!-- Product Name -->
                                <h5 class="card-title">@produit.Nom</h5>

                                <!-- Product Price -->
                                <p class="card-text">
                                    Prix : <span style="font-weight: bold;">@produit.Prix MAD</span>
                                </p>

                                <!-- Add to Cart Button -->
                                <button class="btn add-to-cart"
                                        data-id="@produit.Id" data-nom="@produit.Nom" data-prix="@produit.Prix" data-image="@produit.ImagePath">
                                    Ajouter au Panier
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

