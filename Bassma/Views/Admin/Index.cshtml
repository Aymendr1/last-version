@{
    Layout = "~/Views/Shared/_LayoutDash.cshtml";
}

<div class="header">
    <h1>Bienvenue sur le Tableau de Bord Admin</h1>
    <p>Gérez vos produits, utilisateurs, messages, et plus encore.</p>
</div>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Produits</h5>
                <p class="card-text">Gérez tous vos produits ici.</p>
                <a href="/Produits" class="btn btn-primary">Voir</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Cart</h5>
                <p class="card-text">Gérez les articles dans le panier.</p>
                <a href="/Cart" class="btn btn-primary">Voir</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Messages</h5>
                <p class="card-text">Consultez et répondez aux messages des utilisateurs.</p>
                <a href="/Contact" class="btn btn-primary">Voir</a>
            </div>
        </div>
    </div>
</div>