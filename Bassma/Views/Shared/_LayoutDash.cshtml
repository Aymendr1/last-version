<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f9f4ef;
            margin: 0;
            padding: 0;
        }

        .sidebar {
            background-color: rgb(66, 38, 42);
            color: white;
            height: 100vh;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            padding: 30px 20px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        }

            .sidebar h3 {
                font-size: 2rem;
                font-weight: bold;
                color: white;
                text-align: center;
                margin-bottom: 60px;
            }

            .sidebar a {
                display: block;
                color: white;
                text-decoration: none;
                font-weight: 500;
                padding: 15px 20px;
                margin: 15px 0;
                border-radius: 5px;
                transition: all 0.3s ease-in-out;
            }

                .sidebar a:hover {
                    background-color: rgba(255, 255, 255, 0.2);
                    color: white;
                }

                .sidebar a.active {
                    background-color: rgba(255, 255, 255, 0.2);
                    color: white;
                }

        .content {
            margin-left: 270px;
            padding: 50px 40px;
            background-color: #ffffff;
            min-height: 100vh;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
        }

        footer {
            margin-top: 50px;
            font-size: 0.9rem;
            color: rgb(66, 38, 42);
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h3>Admin Dashboard</h3>
        <a href="/Produits" class="active">Produits</a>
        <a href="/Cart">Cart</a>
        <a href="/RoleManagement">Assign Roles</a>
        <a href="/Contact">Messages</a>
        <a href="/Paiements">Payments</a>
        <a href="/Users">Users</a>
    </div>

    <div class="content">
        @RenderBody() <!-- Essential for displaying child views -->
    </div>

    <footer>
        &copy; 2024 Admin Dashboard - Sweet Cravings
    </footer>
</body>
</html>