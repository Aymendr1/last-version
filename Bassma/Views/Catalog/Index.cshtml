@model List<Bassma.Models.Produit>

@{
    ViewData["Title"] = "Catalog";
}

/* Include fonts and styles */
<link href="https://fonts.googleapis.com/css2?family=Original+Surfer&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Oxygen:wght@300;400;700&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display+SC:wght@700&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Poiret+One&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/styles.css">


<style>
    /* Catalog Hero Section */
    .catalog-hero {
        position: relative;
        width: 100vw; /* Full viewport width */
        height: 90vh; /* Full viewport height */
        background: url('/images/5.jpg') no-repeat center center; /* Center image */
        background-size: cover; /* Ensure image covers the full width and height */
        display: flex;
        justify-content: flex-start; /* Align content to the left */
        align-items: center; /* Vertically center the content */
        text-align: left;
        margin-top: 55px; /* Reduced space between navbar and image */
        
    }

    /* Overlay for Lightening the Background */
    .catalog-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.6);
        display: flex;
        justify-content: flex-start;
        align-items: flex-start;
        padding: 40px; /* Adjust padding around the content */
    }

    /* Content inside the Hero Section */
    .catalog-content {
        color: #fff; /* Change text to black for better readability */
        padding: 20px;
        max-width: 700px; /* Restrict width of the content */
        padding-top: 170px; /* Adjust spacing from the top */
    }
    .custom-product-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr); /* 4 items per row */
        gap: 20px; /* Gap between items */
        row-gap: 40px; /* Space specifically between rows */
        max-width: 1200px;
        margin: 0 auto; /* Center the grid */
        justify-content: center; /* Ensure the grid aligns in the center */
    }

    .custom-product-card {
        border: none;
        border-radius: 10px;
        background-color: white;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        width: 330px; /* Consistent card width */
        text-align: left; /* Left-align the text */
        padding: 15px;
    }

        .custom-product-card img {
            width: 100%;
            height: 240px;
            object-fit: cover;
            margin-bottom: 10px;
            border-radius: 8px;
        }

    .custom-product-details {
        padding: 10px 0; /* Add spacing between text and the image */
    }

    .custom-product-title {
        color: rgb(66, 38, 42);
        font-weight: bold;
        font-size: 1.2rem;
        margin-top: 5px;
        margin-bottom: 5px;
    }

    .custom-product-price {
        color: rgb(66, 38, 42);
        font-size: 1rem;
        margin-bottom: 15px;
    }

    .custom-btn-add-to-cart {
        background-color: rgb(66, 38, 42);
        color: white;
        border: none;
        border-radius: 5px;
        padding: 12px 0; /* Make the button taller */
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: background-color 0.3s ease;
        width: 100%; /* Full width of the card */
        text-align: center;
    }

        .custom-btn-add-to-cart:hover {
            background-color: #5a3b36;
        }
</style>







<!-- Navbar Section -->
<header>
    <nav class="navbar">
        <div class="nav-search">
            <form id="searchForm" method="get" action="/Catalog/Index">
                <input type="text" name="searchTerm" id="searchTerm" class="search-input" placeholder="Search..."
                     
            </form>
            
        </div>
        <div class="nav-left">
            <a href="/" class="nav-link">HOME</a>
            <a href="/Catalog" class="nav-link">CATALOG</a>
        </div>
        <div class="nav-center">
            <a href="/"><img src="~/images/logo.png" alt="Sweet Cravings Logo" class="logo"></a>
        </div>
        <div class="nav-right">
            <a href="/Shop" class="nav-link">SHOP</a>
            <a href="/#contact" class="nav-link">CONTACT</a>
        </div>
        <div class="nav-auth">
            <a href="/Identity/Account/Register" class="btn-signup">SIGN UP</a>
            <a href="/Identity/Account/Login" class="btn-login">LOGIN</a>
        </div>
    </nav>
</header>

<section class="catalog-hero">
    <div class="catalog-overlay">
        <div class="catalog-content">
            <h1 class="hero-title">Treat Yourself Today!</h1>
            <p class="hero-subtitle">Discover Your Favorites!</p>
            <a href="/Shop" class="btn-cta">Wanna Buy A Cake</a>
        </div>
    </div>
</section>

<!-- Colored Background Section -->
<section class="colored-banner">
    <div class="banner"></div>
</section>

<!-- Two-Column Layout Section -->
<section class="two-column-layout">
    <div class="left-large-card">
        <img src="/images/croissant.jpeg" alt="Croissants" class="large-card-image">
        <div class="card-overlay">
            <h3>WE CREATE SWEET MEMORIES</h3>
            <p>Freshly Baked Every Day Just for You</p>
        </div>
    </div>
    <div class="right-small-cards">
        <div class="small-card">
            <img src="/images/m.jpg" alt="Donuts" class="small-card-image">
            <div class="card-overlay">
                <h3>Indulge in Sweet Delight</h3>
                <p>Treat Yourself to Our Finest Creations !!</p>
                <button class="btn-card">ORDER NOW</button>
            </div>
        </div>
        <div class="small-card">
            <img src="/images/3.jpg" alt="Cake" class="small-card-image">
            <div class="card-overlay">
                <h3>Experience Freshness</h3>
                <p>Crispy, Flaky, and Perfectly Baked $$</p>
                <button class="btn-card">GRAB A BITE</button>
            </div>
        </div>
    </div>
</section>
<!-- New Arrivals Section -->
<section class="catalog-new-arrivals">
    <!-- NEW ARRIVALS BOX -->
    <div class="new-arrivals-box">
        <div class="arrows">
            <button class="arrow-btn">‹</button>
            <button class="arrow-btn">›</button>
        </div>
        <h2>NEW ARRIVALS</h2>
        <div class="view-all-products">
            <span class="btn-view-products">VIEW ALL PRODUCTS</span>
        </div>
    </div>

    <!-- PRODUCT GRID -->
    <div class="product-grid">
        <!-- Product 1 -->
        <div class="product-card">
            <img src="/images/444.png" alt="Strawberry Heaven Cupcakes" class="product-image">
            <h3>Strawberry Heaven Cupcakes</h3>
            <p>18 MAD</p>
            <button class="btn-add-to-cart">ADD TO CART</button>
        </div>

        <!-- Product 2 -->
        <div class="product-card">
            <img src="/images/333.png" alt="Golden Mooncakes" class="product-image">
            <h3>Golden Mooncakes</h3>
            <p>16 MAD</p>
            <button class="btn-add-to-cart">ADD TO CART</button>
        </div>

        <!-- Product 3 -->
        <div class="product-card">
            <img src="/images/222.png" alt="Berry Bliss Cake" class="product-image">
            <h3>Berry Bliss Cake</h3>
            <p>24 MAD</p>
            <button class="btn-add-to-cart">ADD TO CART</button>
        </div>
    </div>
</section>

<section class="full-width-image">
    <img src="/images/43.jpg" alt="Macarons" class="wide-image">
</section>

<!-- Product Gallery Section -->

<section id="productSection" class="catalog-section product-section">
    <h2 class="product-gallery-title">Products</h2>
    <div id="productGrid" class="custom-product-grid">
        @foreach (var product in Model)
        {
            <div class="custom-product-card" data-name="@product.Nom">
                <img src="@product.ImagePath" alt="@product.Nom" class="custom-product-image">
                <div class="custom-product-details">
                    <h3 class="custom-product-title">@product.Nom</h3>
                    <p class="custom-product-price">@product.Prix MAD</p>
                </div>
                <button class="custom-btn-add-to-cart">ADD TO CART</button>
            </div>
        }
    </div>
</section>



<script>
    document.addEventListener('DOMContentLoaded', function () {
        const searchInput = document.getElementById('searchTerm');
        const productGrid = document.getElementById('productGrid');

        searchInput.addEventListener('keyup', function () {
            const searchTerm = this.value.toLowerCase();
            const products = productGrid.querySelectorAll('.custom-product-card');

            products.forEach(product => {
                const productName = product.getAttribute('data-name').toLowerCase();
                if (productName.startsWith(searchTerm)) {
                    product.style.display = 'block'; // Affiche le produit
                } else {
                    product.style.display = 'none'; // Cache le produit
                }
            });

            // Défilement automatique vers la section des produits
            const productSection = document.getElementById('productSection');
            if (productSection) {
                productSection.scrollIntoView({ behavior: 'smooth' });
            }
        });

        document.getElementById('searchForm').addEventListener('submit', function () {
            const productSection = document.getElementById('productSection');
            if (productSection) {
                setTimeout(() => {
                    productSection.scrollIntoView({ behavior: 'smooth' });
                }, 500); // Attente du rechargement
            }
        });
    });

</script>




